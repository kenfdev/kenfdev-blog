---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { DEFAULT_LANG } from '@/lib/config';
import { t } from '@/lib/i18n';

const lang = DEFAULT_LANG;
---

<BaseLayout
  title={t(lang, 'notFound')}
  description={t(lang, 'notFoundMessage')}
  lang={lang}
  noindex={true}
>
  <div class="not-found">
    <h1>404</h1>
    <p>{t(lang, 'notFoundMessage')}</p>
    <a href={`/${lang}/`}>{t(lang, 'backToHome')}</a>
  </div>
</BaseLayout>
